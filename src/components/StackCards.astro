---
const { title, description } = Astro.props;
---

<div id="general" class="flex justify-center text-center mt-2.5">
  <div
    id="cada-lenguaje"
    class="flex justify-center gap-4 bg-white/20 border border-white/20 rounded-2xl overflow-hidden shadow-md hover:shadow-[#1b3669] hover:-translate-y-1 transition-all duration-300 w-[300px] mx-2 p-1.5 cursor-default dark:text-white dark:hover:shadow-white"
  >
    <div id="hueco" class="w-12 h-12">
      <slot name="icon" />
    </div>
    <div id="escrito">
      <h3 class="text-xl font-semibold dark:text-white">{title}</h3>
      <p class="dark:text-white">{description}</p>
    </div>
  </div>
</div>
